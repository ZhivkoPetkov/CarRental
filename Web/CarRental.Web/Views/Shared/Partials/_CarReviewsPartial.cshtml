                                    <div class="col-md-3">
                                        <div class="card border-warning mb-3" style="max-width: 17rem;height: 220px">
                                            <div class="card-body justify-content-around">
                                                <div class="card-header" style="background-color:transparent"><h4>Rating: @Model.ToList()[7].Rating</h4></div>
                                                <p class="card-text"><strong>Comment: </strong>@Model.ToList()[7].Comment</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <!--.row-->
                        </div>
                    }
                    <!--.item-->

                </div>
                <!--.carousel-inner-->
            </div>
